@bot.message_handler(commands=['skills'])
def button_mySkills(message):   #А тут мы хотим включить кнопки, чтоб они ещё выводились - было бы неплохо;)
    bot.reply_to(message,'Что ты хочешь сделать?')
    keyboard1 = types.ReplyKeyboardMarkup(resize_keyboard=True)
    item1 = types.KeyboardButton("Каталог")
    item2 = types.KeyboardButton("Купить")
    item3 = types.KeyboardButton("О нас(а на нас)")
    item4 = types.KeyboardButton("Помощь")
    keyboard1.add(item1,item2,item3,item4)